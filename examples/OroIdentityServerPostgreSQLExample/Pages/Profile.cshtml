@page
@model OroIdentityServerExample.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">User Profile</h3>
                </div>
                <div class="card-body">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <h4>Welcome, @User.Identity.Name!</h4>
                        <p><strong>User ID:</strong> @Model.UserId</p>
                        <p><strong>Username:</strong> @Model.Username</p>

                        <h5>Claims:</h5>
                        <ul class="list-group">
                            @foreach (var claim in Model.Claims)
                            {
                                <li class="list-group-item">
                                    <strong>@claim.Key:</strong> @claim.Value
                                </li>
                            }
                        </ul>

                        <div class="mt-3">
                            <a href="/" class="btn btn-secondary">Back to Home</a>
                            <form method="post" asp-page-handler="Logout" class="d-inline">
                                <button type="submit" class="btn btn-danger">Logout</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <p>You are not authenticated. <a href="/login">Login</a></p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>